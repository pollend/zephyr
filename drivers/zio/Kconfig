menuconfig ZIO
	bool "ZIO Drivers"
	help
	  Include zio drivers in system config

if ZIO

module = ZIO
module-str = zio
source "subsys/logging/Kconfig.template.log_config"

comment "Device Drivers"

source "drivers/zio/synth/Kconfig"

endif # ZIO
